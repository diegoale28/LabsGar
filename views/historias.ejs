          <h2 class="h4">Historias de pacientes</h2>
        </div>

        <div class="col-12 d-flex gap-4 mb-4">
          <form action="/historias/uno" method="post">
            <div class="input-group">
              <input type="text" class="form-control" name="cedula" placeholder="Buscar por cedula"
                aria-label="Buscar por cedula" aria-describedby="button-search" autocomplete="off">
              <button class="btn btn-outline-secondary" type="submit" id="button-search"><i data-lucide="search"></i>
