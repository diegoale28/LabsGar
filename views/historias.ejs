                  <th class="text-center">Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% historias.forEach(function(h) { %>
                  <tr>
                    <td>
                      <span>
                        <%= fecha(h.fecha) %>
                      </span>
                    </td>
                    <td>
                      <span class="fw-bold ">
                        #<%= h.numero_orden %>
