<% const color=(estado)=> {
  switch (estado) {
  case "pendiente":
  return "bg-warning text-black";
  break;
  case "completado":
  return "bg-success";
  break;
  case "cancelado":
  return "bg-danger";
  break;
  case "procesando":
  return "bg-primary border-1 border border-white";
  break;
  default:
  break;
  }}

  const fecha = (fecha) => {
  const datos = new Date(fecha).toLocaleDateString('es-ES',
  {
  year:'numeric',
  month:'2-digit',
  day:'2-digit'
  }
  )
  return `${datos}`
  }

  const total = (montos) =>{
  let montoFinal = 0
  montos.forEach((r)=>{
  montoFinal = montoFinal + parseFloat(r.precio)
  })
  return montoFinal.toFixed(2)
  }
  %>

  <!DOCTYPE html>
  <html lang="es">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
