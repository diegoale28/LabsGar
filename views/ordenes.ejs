<% const color=(estado)=> {
  switch (estado) {
  case "pendiente":
  return "bg-warning";
  break;
  case "completado":
  return "bg-success";
  break;
  case "cancelado":
  return "bg-danger";
  break;
  case "procesando":
  return "bg-primary";
  break;
  default:
  break;
  }}

  const fecha = (fecha) => {
  const datos = new Date(fecha).toLocaleDateString('es-ES',
  {
  year:'numeric',
  month:'2-digit',
  day:'2-digit'
  }
  )
  return `${datos}`
  }
  %>

  <!DOCTYPE html>
